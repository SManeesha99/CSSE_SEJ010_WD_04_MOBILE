<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recharge">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="408dp"
                android:scaleType="fitXY"
                android:layout_height="156dp"
                android:layout_marginEnd="3dp"
                app:srcCompat="@drawable/upn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="match_parent"
                android:orientation="vertical">



            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Top Up"
                android:textColor="#3F51B5"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="40dp"
                android:text="Recharge Amount*"
                android:textColor="#000000"
                android:textSize="16sp" />

                <EditText
                    android:id="@+id/rechargAmountID"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/inputback"
                    android:ems="10"
                    android:hint="Enter Recharge Amount"
                    android:inputType="textPersonName"
                    android:padding="10sp" />

                <TextView
                    android:id="@+id/textView1134"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="20dp"
                    android:text="Select Payment Method*"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/mastercardID"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Master Card"/>
                    <RadioButton
                        android:id="@+id/visacardID"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Visa"/>
                    </LinearLayout>
                </RadioGroup>


                <TextView
                    android:id="@+id/cnumtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="20dp"
                    android:text="Card Number*"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tpupcardnumID"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/inputback"
                    android:ems="10"
                    android:hint="Enter Card Number"
                    android:inputType="textPersonName"
                    android:padding="10sp" />

                <TextView
                    android:id="@+id/expdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="20dp"
                    android:text="Expiry Date*"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/expdateID"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/inputback"
                    android:ems="10"
                    android:hint="Enter Expiry Date"
                    android:inputType="textPersonName"
                    android:padding="10sp" />
                <TextView
                    android:id="@+id/CVC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="20dp"
                    android:text="CVC*"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/CVCID"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/inputback"
                    android:ems="10"
                    android:hint="Enter CVC"
                    android:inputType="textPersonName"
                    android:padding="10sp" />

                <Button
                    android:id="@+id/paybtnID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp"
                    android:backgroundTint="#3F51B5"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="pay"
                    android:textSize="16sp" />



            </LinearLayout>
            <ImageView
                android:id="@+id/bottomimgid"
                android:layout_width="408dp"
                android:scaleType="fitXY"
                android:layout_height="156dp"
                android:layout_marginEnd="3dp"
                app:srcCompat="@drawable/bottom" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>

